@page
@model DigitalWallet.Areas.Customer.Pages.Transactions.Operations.TransferFundsModel
@{
    ViewData["Title"] = "Transfer Funds";
}

<div class="h-100 row justify-content-md-center">
    <div class="col-md-5 align-content-center">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <form method="post" id="submit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Receiver" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Receiver" class="form-label"></label>
                <span asp-validation-for="Input.Receiver" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Amount" class="form-control" aria-required="true" placeholder="0.00" step="0.01" />
                <label asp-for="Input.Amount" class="form-label"></label>
                <span asp-validation-for="Input.Amount" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Description" class="form-control" aria-required="true" placeholder="With love" />
                <label asp-for="Input.Description" class="form-label"></label>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <button id="startTransaction" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Transfer</button>
        </form>
        <a asp-area="" asp-page="/Index" class="w-100 btn btn-lg btn-secondary">Back to Menu</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_TransactionsPartial");
    }
}
