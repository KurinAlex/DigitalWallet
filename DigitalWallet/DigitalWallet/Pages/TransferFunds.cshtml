@page
@model DigitalWallet.Pages.TransferFundsModel
@{
    ViewData["Title"] = "Transfer Funds";
}

<div class="row justify-content-md-center">
    <div class="col-md-5">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Input.Receiver" class="control-label"></label>
                <input asp-for="Input.Receiver" class="form-control" />
                <span asp-validation-for="Input.Receiver" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Amount" class="control-label"></label>
                <input asp-for="Input.Amount" class="form-control" />
                <span asp-validation-for="Input.Amount" class="text-danger"></span>
            </div>
            <input type="submit" value="Transfer" class="w-100 btn btn-lg btn-primary mb-2" />
        </form>
        <a asp-page="/Index" class="w-100 btn btn-lg btn-secondary">Back to Menu</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
