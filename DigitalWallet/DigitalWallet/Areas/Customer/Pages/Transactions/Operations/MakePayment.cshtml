@page
@model DigitalWallet.Areas.Customer.Pages.Transactions.Operations.MakePaymentModel
@{
    ViewData["Title"] = "Make Payment";
}

<div class="h-100 row justify-content-md-center">
    <div class="col-md-5 align-content-center">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <form method="post" id="submit">
            <div class="form-floating mb-3">
                <select asp-for="Input.CompanyId" class="form-select" asp-items="Model.Companies">
                    <option value="">-- Select Company --</option>
                </select>
                <label asp-for="Input.CompanyId" class="control-label"></label>
                <span asp-validation-for="Input.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Service" class="form-control" aria-required="true" placeholder="Service"/>
                <label asp-for="Input.Service" class="form-label"></label>
                <span asp-validation-for="Input.Service" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Amount" class="form-control" aria-required="true" placeholder="0.00" step="0.01"/>
                <label asp-for="Input.Amount" class="form-label"></label>
                <span asp-validation-for="Input.Amount" class="text-danger"></span>
            </div>
            <button id="startTransaction" type="submit" class="btn btn-lg btn-primary w-100">Pay</button>
        </form>
        <a asp-area="" asp-page="/Index" class="w-100 btn btn-lg btn-secondary">Back to Menu</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_TransactionsPartial");
    }
}
