@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="h-100 row justify-content-md-center">
    <div class="col-md-6 align-content-center">
        <h1 class="text-danger">@ViewData["Title"]</h1>
        <h2 class="text-danger">An error occurred while processing your request.</h2>

        @if (Model.ShowRequestId)
        {
            <dl>
                <dt class="fs-4">
                    Request Id
                </dt>
                <dd class="copy-content fs-5">
                    @Html.DisplayFor(model => model.RequestId)
                </dd>
            </dl>
        }

        <a asp-page="/Support" class="btn btn-primary btn-lg w-100">Contact Support</a>
        <a asp-page="/Index" class="btn btn-secondary btn-lg w-100">Back to Menu</a>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_NotificationsPartial");
    }
}
