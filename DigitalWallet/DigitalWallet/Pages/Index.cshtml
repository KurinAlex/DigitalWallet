@page
@using DigitalWallet.Models
@using Microsoft.AspNetCore.Identity
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@inject SignInManager<Client> SignInManager

<div class="h-100 row justify-content-md-center text-center">
    <div class="col-md-5 align-content-center">
        <h1 class="display-4">Welcome to DigitalWallet!</h1>
        @if (SignInManager.IsSignedIn(User))
        {
            @if (Model.Wallet == null)
            {
                <div>
                    <a class="btn btn-primary w-100" asp-page="./WalletDetails">Create wallet</a>
                </div>
            }
            else
            {
                <div>
                    <a class="btn btn-primary w-100 m-1" asp-page="./WalletDetails">My wallet</a>
                </div>
                <div>
                    <a class="btn btn-primary w-100 m-1" asp-page="./DepositFunds">Deposit Funds</a>
                </div>
                <div>
                    <a class="btn btn-primary w-100 m-1" asp-page="./TransferFunds">Transfer Funds</a>
                </div>
                <div>
                    <a class="btn btn-primary w-100 m-1" asp-page="./MakePayment">Make a Payment</a>
                </div>
            }
        }
        else
        {
            <p>Please <a asp-area="Identity" asp-page="Account/Register">register</a> or <a asp-area="Identity" asp-page="Account/Login">log in</a> to be able to complete operations.</p>
        }
    </div>
</div>
